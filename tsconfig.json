{
  "compilerOptions": {
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "umd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ]
}